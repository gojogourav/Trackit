generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  follower          User[]     @relation("UserFollows")
  following         User[]     @relation("UserFollows")
  id                String     @id @default(uuid())
  name              String?
  username          String     @unique
  password          String
  email             String     @unique
  createdAt         DateTime   @default(now())
  createdActivities Activity[] @relation("UserActivities")
  memberActivities  Activity[] @relation("ActivityMembership")
  profilePhoto      String
  tokenVersion Int @default(0)
}

model Activity {
  creator       User      @relation("UserActivities", fields: [userId], references: [id])
  members       User[]    @relation("ActivityMembership")
  id            String    @id @default(uuid())
  activityTitle         String
  description   String?
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  private       Boolean   @default(true)
  timelogs      TimeLog[]
  Activityphoto String?

  @@index([userId])
  @@index([createdAt])
}

model TimeLog {
  timeLogTitle String?
  activity     Activity @relation(fields: [activityId], references: [id])
  activityId   String
  id           String   @id @default(uuid())
  sessionTime  Int
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  SessionPhoto String?

  @@index([activityId])
}
